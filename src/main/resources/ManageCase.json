{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/cases/v2/{id}": {
      "get": {
        "summary": "Find case by ID",
        "operationId": "getCaseById",
        "parameters": [
          {
            "name": "caseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CaseNew"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CaseNew": {
        "type": "object",
        "properties": {
          "caseId": {
            "type": "integer",
            "format": "int32",
            "description": "Unique identifier for the case"
          },
          "caseStatus": {
            "type": "string",
            "enum": ["OPEN", "CLOSED", "PENDING"],
            "description": "Status of the case"
          },
          "caseType": {
            "type": "string",
            "enum": ["TYPE1", "TYPE2", "TYPE3"],
            "description": "Type of the case"
          },
          "createdBy": {
            "type": "string",
            "description": "User who created the case"
          },
          "createDate": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the case was created"
          },
          "modifiedDate": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the case was last modified"
          },
          "pendingReviewDate": {
            "type": "string",
            "format": "date-time",
            "description": "Date and time when the case is pending review"
          },
          "note": {
            "type": "string",
            "maxLength": 1000,
            "description": "Additional notes about the case"
          }
        },
        "required": ["caseStatus", "caseType", "createdBy"]
      }
    }
  }
}
